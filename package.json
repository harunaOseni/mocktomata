{
  "name": "mocktomata",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "clean": "lerna run clean && rimraf .tsbuildinfo",
    "coverage": "jest --coverage",
    "depcheck": "lerna run depcheck",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && lerna clean -y && rimraf node_modules",
    "release": "lerna publish --amend",
    "test": "jest",
    "test:watch": "jest --watch",
    "verify": "yarn lint && yarn depcheck && yarn coverage",
    "watch": "yarn test:watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@jest-runner/electron": "2.0.2",
    "@types/ramda": "^0.26.29",
    "@types/rimraf": "^2.0.2",
    "@unional/devpkg-node": "^1.4.1",
    "assertron": "^7.1.2",
    "codecov": "^3.6.1",
    "commitlint-circle": "^1.0.0",
    "husky": "^3.0.9",
    "jest-watch-exec": "^1.4.1",
    "lerna": "^3.17.0",
    "rimraf": "^3.0.0"
  }
}
