{
  "name": "komondor",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "clean": "lerna run clean && rimraf .tsbuildinfo",
    "coverage": "jest --coverage",
    "depcheck": "lerna run depcheck",
    "lint": "lerna run lint",
    "nuke": "yarn clean && lerna clean -y && rimraf node_modules",
    "release": "lerna publish --amend",
    "test": "jest",
    "test:watch": "jest --watch",
    "verify": "yarn lint && yarn depcheck && yarn coverage",
    "watch": "yarn test:watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@jest-runner/electron": "2.0.2",
    "@types/ramda": "^0.26.8",
    "@types/rimraf": "^2.0.2",
    "@unional/devpkg-node": "^1.3.0",
    "assertron": "^7.1.0",
    "jest-watch-exec": "^1.4.1",
    "lerna": "^3.14.1",
    "rimraf": "^2.6.3"
  }
}
