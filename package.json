{
  "name": "komondor",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "clean": "lerna run clean && rimraf .tsbuildinfo",
    "coverage": "jest --coverage",
    "depcheck": "lerna run depcheck",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && lerna clean -y && rimraf node_modules",
    "release": "lerna publish --amend",
    "test": "jest",
    "test:watch": "jest --watch",
    "verify": "yarn lint && yarn depcheck && yarn coverage",
    "watch": "yarn test:watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@jest-runner/electron": "2.0.2",
    "@types/ramda": "^0.26.19",
    "@types/rimraf": "^2.0.2",
    "@unional/devpkg-node": "^1.4.0",
    "assertron": "^7.1.2",
    "eslint-plugin-harmony": "^2.1.6",
    "jest-watch-exec": "^1.4.1",
    "lerna": "^3.16.4",
    "rimraf": "^3.0.0"
  }
}
