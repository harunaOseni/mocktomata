{
  "name": "komondor",
  "version": "7.0.0-alpha",
  "description": "Your friendly guard dog for writing tests across boundaries",
  "keywords": [
    "boundary",
    "boundary-testing",
    "fixture",
    "testing",
    "testing-framework",
    "testing-tools"
  ],
  "homepage": "https://github.com/unional/komondor",
  "bugs": {
    "url": "https://github.com/unional/komondor/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/komondor.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "files": [
    "lib",
    "libm",
    "dist"
  ],
  "main": "lib/index.js",
  "module": "libm/index.js",
  "jsnext:main": "libm/index.js",
  "typings": "lib/index.d.ts",
  "bin": {
    "komondor": "lib/bin.js"
  },
  "scripts": {
    "build": "yarn build:es5 && yarn build:esnext && yarn build:browser",
    "build:es5": "tsc -p tsconfig.es5.json",
    "build:esnext": "tsc -p tsconfig.esnext.json",
    "build:browser": "webpack",
    "clean": "rimraf lib libm dist .ts",
    "coverage": "jest --coverage --reporters=default",
    "dc": "yarn dependency-check",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --reporters=default",
    "test:watch": "jest --watch",
    "verify": "yarn lint && yarn build && yarn dc && yarn coverage",
    "watch": "yarn test:watch"
  },
  "dependencies": {
    "@komondor-lab/core": "^7.0.0-alpha",
    "@komondor-lab/io-client": "^7.0.0-alpha",
    "@komondor-lab/io-local": "^7.0.0-alpha",
    "@komondor-lab/io-server": "^7.0.0-alpha.0",
    "assertron": "^7.1.2",
    "async-fp": "^1.2.3",
    "chalk": "^2.4.2",
    "clibuilder": "^5.0.4",
    "is-node": "^1.0.2",
    "type-plus": "^1.29.0",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@komondor-lab/plugin-fixture-deep-link": "^1.0.2",
    "@komondor-lab/plugin-fixture-dummy": "^1.0.3",
    "@types/delay": "^3.1.0",
    "@types/tmp": "^0.1.0",
    "@unional/devpkg-node": "^1.4.1",
    "delay": "^4.3.0",
    "jest": "^24.9.0",
    "karma": "^4.3.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^1.3.0",
    "karma-typescript": "^4.1.1",
    "mocha": "^6.2.1",
    "param-case": "^2.1.1",
    "pascal-case": "^2.0.1",
    "source-map-loader": "^0.2.4",
    "tmp": "^0.1.0",
    "ts-loader": "^6.2.0",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.3.9"
  }
}
